<?xml version="1.0" encoding="utf-8" ?>
<customControls:GradientContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:XamarinTestApp.Controls"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
              
             x:Class="XamarinTestApp.Views.DashboardPage"
             StartColor="{StaticResource DefaultGradientStartBackgroundColor}"
             EndColor="{StaticResource DefaultGradientStopBackgroundColor}">
<!-- 
           xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
		     xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
		     xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"      
    -->
   <!-- <customControls:GradientContentPage.Resources>
        <ResourceDictionary>
            <ffimageloadingsvg:SvgImageSourceConverter x:Key="SvgImageSourceConverter"></ffimageloadingsvg:SvgImageSourceConverter>
        </ResourceDictionary>
    </customControls:GradientContentPage.Resources>-->
    
    <Grid>
        <ScrollView>
          <Grid>
              <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>
              <controls:CircleImage Source="jag2.png" BorderColor="White" BorderThickness="2" Aspect="AspectFill" WidthRequest="75" HeightRequest="75" Margin="0,100,0,0" HorizontalOptions="Center"/>

              <Label Text="Andreas Drake" Grid.Row="1" Style="{StaticResource UserNameLabelStyle}" Margin="0,20,0,0" HorizontalOptions="Center"/>
              <Label Text="May 2017" Grid.Row="2" Style="{StaticResource LoginPageLabelUnderTitleStyle}" FontFamily="Montserrat-Bold"
                 TextColor="{StaticResource PrimaryColor2}" Margin="0,20,0,0" HorizontalOptions="Center"/>

              <Grid Grid.Row="3" Margin="0,40,0,0" HorizontalOptions="Center">
                  <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="1"/>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="1"/>
                      <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>
                  <Grid Grid.Column="0" Margin="0,0,10,0">
                      <Grid.RowDefinitions>
                          <RowDefinition Height="Auto"/>
                          <RowDefinition Height="Auto"/>
                      </Grid.RowDefinitions>
                      <Label Grid.Row="0" Text="15 h" Style="{StaticResource HoursAndDaysLabelStyle}"/>
                      <Label Grid.Row="1" Text="Reported" Style="{StaticResource LoginPageLabelUnderTitleStyle}"/>
                  </Grid>
                  <BoxView BackgroundColor="White" WidthRequest="1"  Grid.Column="1" />
                  <Grid Grid.Column="2" Margin="10,0,10,0">
                      <Grid.RowDefinitions>
                          <RowDefinition Height="Auto"/>
                          <RowDefinition Height="Auto"/>
                      </Grid.RowDefinitions>
                      <Label Grid.Row="0" Text="156 h" Style="{StaticResource HoursAndDaysLabelStyle}"/>
                      <Label Grid.Row="1" Text="Total for Month" Style="{StaticResource LoginPageLabelUnderTitleStyle}"/>
                  </Grid>
                  <BoxView BackgroundColor="White" WidthRequest="1"  Grid.Column="3" />
                  <Grid Grid.Column="4" Margin="10,0,0,0">
                      <Grid.RowDefinitions>
                          <RowDefinition Height="Auto"/>
                          <RowDefinition Height="Auto"/>
                      </Grid.RowDefinitions>
                      <Label Grid.Row="0" Text="5 days" Style="{StaticResource HoursAndDaysLabelStyle}"/>
                      <Label Grid.Row="1" Text="Remaining" Style="{StaticResource LoginPageLabelUnderTitleStyle}"/>
                  </Grid>
              </Grid>

              <!--<ffimageloading:CachedImage HorizontalOptions="Center" VerticalOptions="Center"
			  WidthRequest="300" HeightRequest="300" Grid.Row="0"
			  DownsampleToViewSize="true"
			  Source = "http://loremflickr.com/600/600/nature?filename=simple.jpg">
              </ffimageloading:CachedImage>-->
              <!--<ffimageloading:CachedImage WidthRequest="200" HeightRequest="200" Grid.Row="0"

				  Source="{Binding Source, Converter={StaticResource SvgImageSourceConverter}}">

              </ffimageloading:CachedImage>-->
              <!--<ffimageloadingsvg:SvgCachedImage WidthRequest="200" HeightRequest="200" Source="sample.svg"/>-->
              <Button Margin="20,0,20,20" HorizontalOptions="FillAndExpand" Text="Quick report default day" 
                      Style="{StaticResource NormalButtonStyle}"
                      Grid.Row="5" Command="{Binding Path=QuickReportCommand}"/>
          </Grid>
        </ScrollView>
        <Grid IsVisible="{Binding Path=IsBusy}" Opacity="0.75" BackgroundColor="Black"
            VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
        <Grid HorizontalOptions="FillAndExpand" BackgroundColor="Black" VerticalOptions="Center" IsVisible="{Binding Path=IsBusy}">
            <Grid IsVisible="{Binding Path=ShowSpinner}" Margin="20,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ActivityIndicator Color="{StaticResource PrimaryColor2}" IsRunning="{Binding Path=IsBusy}" Grid.Row="0"  />
                <Label Text="{Binding Path=BusyText}" Style="{StaticResource LoginPageLabelUnderTitleStyle}" Grid.Row="1"/>
            </Grid>
            <Grid IsVisible="{Binding Path=QuickSaveOk}" Margin="20,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Source="greencheckmark.png" Grid.Row="0" HorizontalOptions="Center"/>
                <Label Text="{Binding Path=BusyText}" Style="{StaticResource LoginPageLabelUnderTitleStyle}" Grid.Row="1" HorizontalOptions="Center"/>
            </Grid>
        </Grid>
    </Grid>
</customControls:GradientContentPage>